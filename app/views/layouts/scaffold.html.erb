<% content_for :body do %>
  <div class="row g-0">
    <div id="navigation" class="col-md-3 col-xl-2 d-md-block bg-dark text-primary fixed-top fixed-bottom overflow-auto p-4 collapse">
      <%= render "scaffold/navigation" %>
    </div>

    <main class="col-md-9 col-xl-10 ms-md-auto">
      <%= render "shared/flash" %>

      <div class="p-4">
        <div class="navbar-light text-center">
          <button class="navbar-toggler d-md-none collapsed mb-2" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>

        <%= render "scaffold/header" %>
        <%= yield %>
      </div>
    </main>
  </div>
<% end %>

<%= render template: "layouts/base" %>
