<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <title><%= yield :page_title %></title>

    <%= stylesheet_pack_tag "application", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body class="bg-orange-200">
    <% if notice %>
      <div class="bg-teal-700 text-white text-sm font-bold px-4 py-3" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-red-700 text-white text-sm font-bold px-4 py-3" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
