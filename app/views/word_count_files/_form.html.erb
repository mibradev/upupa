<%= page.form(model: [word_count_file.word_count, word_count_file]) do |form| %>
  <%= form.field do %>
    <%= form.label :word_count_id %>
    <%= form.text_field :word_count_id, disabled: true, value: word_count_file.word_count.date %>
  <% end %>

  <%= form.field do %>
    <%= form.label :work_file_id %>
    <%= form.collection_select :work_file_id, WorkFile.all, :id, :name, include_blank: true %>
  <% end %>

  <%= form.field do %>
    <%= form.label :actual_word_count %>
    <%= form.number_field :actual_word_count %>
  <% end %>

  <%= form.field do %>
    <%= form.label :work_type_id %>
    <%= form.collection_select :work_type_id, WorkType.all, :id, :name, include_blank: true %>
  <% end %>

  <%= form.field do %>
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  <% end %>

  <%= form.submit %>
<% end %>
