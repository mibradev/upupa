<%= render "shared/scaffold/header" do %>
  <%= render "shared/scaffold/header/heading", content: "Show Word Count File" %>

  <%= render "shared/scaffold/header/actions" do %>
    <%= render "shared/scaffold/header/action", body: "Edit", url: edit_word_count_file_path(@word_count_file) %>
    <%= render "shared/scaffold/header/action", body: "Back", url: word_count_files_path %>
  <% end %>
<% end %>

<%= render "shared/scaffold/description_list" do %>
  <%= render "shared/scaffold/description_list/row" do %>
    <%= render "shared/scaffold/description_list/term", term: "Actual word count" %>
    <%= render "shared/scaffold/description_list/description", description: @word_count_file.actual_word_count %>
  <% end %>

  <%= render "shared/scaffold/description_list/row" do %>
    <%= render "shared/scaffold/description_list/term", term: "Notes" %>
    <%= render "shared/scaffold/description_list/description", description: @word_count_file.notes %>
  <% end %>

  <%= render "shared/scaffold/description_list/row" do %>
    <%= render "shared/scaffold/description_list/term", term: "Work type" %>
    <%= render "shared/scaffold/description_list/description", description: @word_count_file.work_type.name %>
  <% end %>
<% end %>
