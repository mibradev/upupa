<% page.heading "Word Count File" %>

<% page.actions do |actions| %>
  <%= actions.edit edit_word_count_word_count_file_path(@word_count, @word_count_file) %>
  <%= actions.destroy [@word_count, @word_count_file] %>
  <%= actions.index @word_count %>
<% end %>

<%= page.description_list do |description_list| %>
  <%= description_list.group do |group| %>
    <%= group.term "Word count" %>
    <%= group.description @word_count_file.word_count.date %>
  <% end %>

  <%= description_list.group do |group| %>
    <%= group.term "Work file" %>
    <%= group.description @word_count_file.work_file.name %>
  <% end %>

  <%= description_list.group do |group| %>
    <%= group.term "Actual word count" %>
    <%= group.description @word_count_file.actual_word_count %>
  <% end %>

  <%= description_list.group do |group| %>
    <%= group.term "Work type" %>
    <%= group.description @word_count_file.work_type.name %>
  <% end %>

  <%= description_list.group do |group| %>
    <%= group.term "Total" %>
    <%= group.description number_with_precision(@word_count_file.total, precision: 2) %>
  <% end %>

  <%= description_list.group do |group| %>
    <%= group.term "Notes" %>
    <%= group.description @word_count_file.notes %>
  <% end %>
<% end %>
