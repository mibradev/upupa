<% content_for :title, I18n.t("page.headings.show", model: WordCountFile.model_name.human) %>

<h1 class="text-2xl font-bold">
  <%= I18n.t("page.headings.show", model: WordCountFile.model_name.human) %>
</h1>

<% content_for(:actions) do %>
  <%= link_to I18n.t("page.actions.edit"), edit_word_count_word_count_file_path(@word_count, @word_count_file), class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
  <%= button_to I18n.t("page.actions.destroy"), word_count_word_count_file_path(@word_count, @word_count_file), method: :delete, form: {data: {turbo_confirm: I18n.t("page.messages.turbo_confirm")}}, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
  <%= link_to I18n.t("page.actions.back"), word_count_path(@word_count), class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
<% end %>

<dl class="text-gray-700 bg-orange-50 rounded divide-y divide-black divide-opacity-10 shadow">
  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCountFile.human_attribute_name(:word_count) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @word_count_file.word_count.date %></dd>
  </div>

  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCountFile.human_attribute_name(:work_file) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @word_count_file.work_file.name %></dd>
  </div>

  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCountFile.human_attribute_name(:actual_word_count) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @word_count_file.actual_word_count %></dd>
  </div>

  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCountFile.human_attribute_name(:work_type) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @word_count_file.work_type.name %></dd>
  </div>

  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCountFile.human_attribute_name(:total) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= number_with_precision(@word_count_file.total, precision: 2) %></dd>
  </div>

  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCountFile.human_attribute_name(:notes) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @word_count_file.notes %></dd>
  </div>
</dl>
