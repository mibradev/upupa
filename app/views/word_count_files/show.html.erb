<%= render "shared/header" do %>
  <%= render "shared/header/heading2", content: "Show Word Count File" %>

  <%= render "shared/header/actions" do %>
    <%= render "shared/header/actions/edit", url: edit_word_count_word_count_file_path(@word_count, @word_count_file) %>
    <%= render "shared/header/actions/index", url: @word_count %>
  <% end %>
<% end %>

<%= render "shared/description_list" do %>
  <%= render "shared/description_list/group", term: "Word count", description: @word_count_file.word_count.date %>
  <%= render "shared/description_list/group", term: "Work file", description: @word_count_file.work_file.name %>
  <%= render "shared/description_list/group", term: "Actual word count", description: @word_count_file.actual_word_count %>
  <%= render "shared/description_list/group", term: "Work type", description: @word_count_file.work_type.name %>
  <%= render "shared/description_list/group", term: "Total", description: number_with_precision(@word_count_file.total, precision: 2) %>
  <%= render "shared/description_list/group", term: "Notes", description: @word_count_file.notes %>
<% end %>
