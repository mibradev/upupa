<%= render "shared/header" do %>
  <%= render "shared/header/heading2", content: "Show Word Count File" %>

  <%= render "shared/header/actions" do %>
    <%= render "shared/header/actions/edit", url: edit_word_count_word_count_file_path(@word_count, @word_count_file) %>
    <%= render "shared/header/actions/index", url: @word_count %>
  <% end %>
<% end %>

<%= render "shared/description_list" do %>
  <%= render "shared/description_list/row" do %>
    <%= render "shared/description_list/term", content: "Word count" %>
    <%= render "shared/description_list/description", content: @word_count_file.word_count.date %>
  <% end %>

  <%= render "shared/description_list/row" do %>
    <%= render "shared/description_list/term", content: "Work file" %>
    <%= render "shared/description_list/description", content: @word_count_file.work_file.name %>
  <% end %>

  <%= render "shared/description_list/row" do %>
    <%= render "shared/description_list/term", content: "Actual word count" %>
    <%= render "shared/description_list/description", content: @word_count_file.actual_word_count %>
  <% end %>

  <%= render "shared/description_list/row" do %>
    <%= render "shared/description_list/term", content: "Work type" %>
    <%= render "shared/description_list/description", content: @word_count_file.work_type.name %>
  <% end %>

  <%= render "shared/description_list/row" do %>
    <%= render "shared/description_list/term", content: "Total" %>
    <%= render "shared/description_list/description", content: number_with_precision(@word_count_file.total, precision: 2) %>
  <% end %>

  <%= render "shared/description_list/row" do %>
    <%= render "shared/description_list/term", content: "Notes" %>
    <%= render "shared/description_list/description", content: @word_count_file.notes %>
  <% end %>
<% end %>
