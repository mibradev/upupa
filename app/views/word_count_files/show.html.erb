<%= page.header do |header| %>
  <%= header.heading "Word Count File" %>

  <%= header.actions do |action| %>
    <%= action.edit edit_word_count_word_count_file_path(@word_count, @word_count_file) %>
    <%= action.index @word_count %>
  <% end %>
<% end %>

<%= render "application/description_list" do %>
  <%= render "application/description_list/group", term: "Word count", description: @word_count_file.word_count.date %>
  <%= render "application/description_list/group", term: "Work file", description: @word_count_file.work_file.name %>
  <%= render "application/description_list/group", term: "Actual word count", description: @word_count_file.actual_word_count %>
  <%= render "application/description_list/group", term: "Work type", description: @word_count_file.work_type.name %>
  <%= render "application/description_list/group", term: "Total", description: number_with_precision(@word_count_file.total, precision: 2) %>
  <%= render "application/description_list/group", term: "Notes", description: @word_count_file.notes %>
<% end %>
