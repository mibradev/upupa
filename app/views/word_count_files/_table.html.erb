<%= render "shared/scaffold/table" do %>
  <%= render "shared/scaffold/table/head" do %>
    <%= render "shared/scaffold/table/head_row" do %>
      <% ["Actual word count", "Notes", "Word count", "Work file", "Work type", ""].each do |title| %>
        <%= render "shared/scaffold/table/head_cell", content: title %>
      <% end %>
    <% end %>
  <% end %>

  <%= render "shared/scaffold/table/body" do %>
    <% word_count_files.each do |word_count_file| %>
      <%= render "shared/scaffold/table/body_row" do %>
        <%= render "shared/scaffold/table/body_cell", content: word_count_file.actual_word_count %>
        <%= render "shared/scaffold/table/body_cell", content: truncate(word_count_file.notes) %>
        <%= render "shared/scaffold/table/body_cell", content: word_count_file.word_count.date %>
        <%= render "shared/scaffold/table/body_cell", content: word_count_file.work_file.name %>
        <%= render "shared/scaffold/table/body_cell", content: word_count_file.work_type.name %>
        <%= render "shared/scaffold/table/cells/actions", resource: word_count_file %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
