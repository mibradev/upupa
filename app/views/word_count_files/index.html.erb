<% if @resources.any? %>
  <%= render "shared/scaffold/table", th_contents: ["Actual word count", "Notes", "Work type"] do |resource| %>
    <%= render "shared/scaffold/table/row", resource: resource, td_contents: [resource.actual_word_count, resource.notes, resource.work_type.name] %>
  <% end %>
<% else %>
  <%= render "shared/scaffold/empty_collection" %>
<% end %>
