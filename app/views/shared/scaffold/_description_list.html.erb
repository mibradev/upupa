<dl class="text-gray-600 bg-orange-50 rounded divide-y divide-gray-300 shadow">
  <% contents.each do |term, description| %>
    <div class="p-5 sm:grid sm:grid-cols-3 sm:gap-4">
      <dt class="text-sm font-medium text-gray-500"><%= term %></dt>
      <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= description %></dd>
    </div>
  <% end %>
</dl>
