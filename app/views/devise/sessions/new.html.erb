<% page_title "Login" %>
<% page_description "Log into #{t :app_name} to access your account." %>

<div class="container py-5">
  <div class="row justify-content-center py-5">
    <div class="col-11 col-sm-6 col-md-5 col-lg-4 col-xl-3 bg-dark text-light px-4 py-5 rounded-3 shadow-sm">
      <h2 class="h3 text-center mb-4">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: :email, required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "*" * 8, required: true %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <%= f.submit "Log in", class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>
