<% content_for :title, I18n.t("views.titles.show", model: WorkType.model_name.human) %>

<main class="space-y-8">
  <header>
    <h1 class="text-2xl font-bold">
      <%= yield :title %>
    </h1>
  </header>

  <% content_for(:actions) do %>
    <%= link_to I18n.t("views.actions.edit"), edit_work_type_path(@work_type), class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent hover:bg-black hover:bg-opacity-10" %>
    <%= button_to I18n.t("views.actions.destroy"), work_type_path(@work_type), method: :delete, form: {data: {turbo_confirm: I18n.t("views.messages.turbo_confirm")}}, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent hover:bg-black hover:bg-opacity-10" %>
    <%= link_to I18n.t("views.actions.back"), work_types_path, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent hover:bg-black hover:bg-opacity-10" %>
  <% end %>

  <dl class="text-gray-700 bg-orange-50 divide-y divide-black divide-opacity-10">
    <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
      <dt class="text-sm font-medium"><%= WorkType.human_attribute_name(:name) %></dt>
      <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @work_type.name %></dd>
    </div>

    <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
      <dt class="text-sm font-medium"><%= WorkType.human_attribute_name(:multiplicand) %></dt>
      <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @work_type.multiplicand %></dd>
    </div>
  </dl>
</main>
