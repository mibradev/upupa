<%= page.header do |header| %>
  <%= header.heading "Work Type" %>

  <%= header.actions do |action| %>
    <%= action.edit edit_work_type_path(@work_type) %>
    <%= action.index work_types_path %>
  <% end %>
<% end %>

<%= render "application/description_list" do %>
  <%= render "application/description_list/group", term: "Name", description: @work_type.name %>
  <%= render "application/description_list/group", term: "Multiplicand", description: @work_type.multiplicand %>
<% end %>
