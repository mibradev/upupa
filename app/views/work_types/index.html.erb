<% content_for :title, I18n.t("views.titles.index", model: WorkType.model_name.human(count: 20)) %>

<h1 class="text-2xl font-bold">
  <%= yield :title %>
</h1>

<% content_for(:actions) do %>
  <%= link_to I18n.t("views.actions.new"), new_work_type_path, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent hover:bg-black hover:bg-opacity-10" %>
<% end %>

<% if @work_types.load.any? %>
  <div class="overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-700 whitespace-nowrap bg-orange-50 divide-y divide-black divide-opacity-10">
      <thead>
        <tr>
          <th scope="col" class="p-4 font-medium"><%= WorkType.human_attribute_name(:name) %></th>
          <th scope="col" class="p-4 font-medium"><%= WorkType.human_attribute_name(:multiplicand) %></th>
          <th scope="col" class="p-4 font-medium"></th>
        </tr>
      </thead>

      <tbody class="divide-y divide-black divide-opacity-10">
        <% @work_types.each do |work_type| %>
          <tr>
            <td class="p-4"><%= work_type.name %></td>
            <td class="p-4"><%= work_type.multiplicand %></td>

            <td class="p-2 text-right">
              <%= link_to I18n.t("views.actions.show"), work_type_path(work_type), class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent hover:bg-black hover:bg-opacity-10" %>
              <%= link_to I18n.t("views.actions.edit"), edit_work_type_path(work_type), class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent hover:bg-black hover:bg-opacity-10" %>
              <%= button_to I18n.t("views.actions.destroy"), work_type_path(work_type), method: :delete, form: {data: {turbo_confirm: I18n.t("views.messages.turbo_confirm")}}, form_class: "inline-block", class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent hover:bg-black hover:bg-opacity-10" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="py-32 px-4 text-lg font-medium text-center text-orange-100 bg-gray-700">
    <%= I18n.t("views.messages.no_records") %>
  </div>
<% end %>
