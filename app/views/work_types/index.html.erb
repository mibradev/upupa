<%= render "shared/scaffold/header", resources: @work_types %>

<% if @work_types.any? %>
  <%= render "shared/scaffold/table", th_contents: ["Name", "Multiplicand"] do %>
    <% @work_types.each do |work_type| %>
      <%= render "shared/scaffold/table/row", resource: work_type, td_contents: [work_type.name, work_type.multiplicand] %>
    <% end %>
  <% end %>
<% else %>
  <%= render "shared/scaffold/empty_collection" %>
<% end %>
