<% page.heading "Work Types" %>

<% page.actions do |actions| %>
  <%= actions.new new_work_type_path %>
<% end %>

<% if @work_types.load.any? %>
  <%= page.table do |table| %>
    <%= table.head do |head| %>
      <%= head.row do |row| %>
        <%= row.cell "Name" %>
        <%= row.cell "Multiplicand" %>
        <%= row.cell %>
      <% end %>
    <% end %>

    <%= table.body(@work_types) do |body, work_type| %>
      <%= body.row do |row| %>
        <%= row.cell work_type.name %>
        <%= row.cell work_type.multiplicand %>

        <%= row.actions do |actions| %>
          <%= actions.show work_type %>
          <%= actions.edit edit_work_type_path(work_type) %>
          <%= actions.destroy work_type %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= page.empty_collection %>
<% end %>
