<%= render "shared/header" do %>
  <%= render "shared/header/heading2", content: "Work Types" %>

  <%= render "shared/header/actions" do %>
    <%= render "shared/header/action", body: "New", url: new_work_type_path %>
  <% end %>
<% end %>

<% unless @work_types.empty? %>
  <%= render "shared/table" do %>
    <%= render "shared/table/head" do %>
      <%= render "shared/table/head_row" do %>
        <%= render "shared/table/head_cell", content: "Name" %>
        <%= render "shared/table/head_cell", content: "Multiplicand" %>
        <%= render "shared/table/head_cell", content: "" %>
      <% end %>
    <% end %>

    <%= render "shared/table/body" do %>
      <% @work_types.each do |work_type| %>
        <%= render "shared/table/body_row" do %>
          <%= render "shared/table/body_cell", content: work_type.name %>
          <%= render "shared/table/body_cell", content: work_type.multiplicand %>

          <%= render "shared/table/actions" do %>
            <%= render "shared/table/action", body: "Show", url: work_type %>
            <%= render "shared/table/action", body: "Edit", url: edit_work_type_path(work_type) %>
            <%= render "shared/table/action", body: "Destroy", url: work_type, method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render "shared/empty_collection" %>
<% end %>
