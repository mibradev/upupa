<%= render "application/header" do %>
  <%= render "application/header/heading2", content: "Work Types" %>

  <%= render "application/header/actions" do %>
    <%= render "application/header/actions/new", url: new_work_type_path %>
  <% end %>
<% end %>

<% unless @work_types.empty? %>
  <%= render "application/table" do %>
    <%= render "application/table/head" do %>
      <%= render "application/table/head_cell", content: "Name" %>
      <%= render "application/table/head_cell", content: "Multiplicand" %>
      <%= render "application/table/head_cell", content: "" %>
    <% end %>

    <%= render "application/table/body", collection: @work_types do |work_type| %>
      <%= render "application/table/body_cell", content: work_type.name %>
      <%= render "application/table/body_cell", content: work_type.multiplicand %>

      <%= render "application/table/actions" do %>
        <%= render "application/table/actions/show", url: work_type %>
        <%= render "application/table/actions/edit", url: edit_work_type_path(work_type) %>
        <%= render "application/table/actions/destroy", url: work_type %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render "application/empty_collection" %>
<% end %>
