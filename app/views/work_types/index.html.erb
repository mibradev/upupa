<% content_for :title, I18n.t("views.titles.index", model: WorkType.model_name.human(count: 20)) %>

<main class="space-y-8">
  <header>
    <h1 class="text-2xl font-bold">
      <%= yield :title %>
    </h1>
  </header>

  <% if @work_types.load.any? %>
    <div class="overflow-x-auto rounded shadow">
      <table class="w-full text-sm text-left whitespace-nowrap divide-y divide-slate-200">
        <thead class="bg-slate-100">
          <tr>
            <th scope="col" class="p-4 font-medium"><%= WorkType.human_attribute_name(:name) %></th>
            <th scope="col" class="p-4 font-medium"><%= WorkType.human_attribute_name(:multiplicand) %></th>
            <th scope="col" class="p-4 font-medium"></th>
          </tr>
        </thead>

        <tbody class="divide-y divide-slate-200">
          <% @work_types.each do |work_type| %>
            <tr>
              <td class="p-4"><%= work_type.name %></td>
              <td class="p-4"><%= work_type.multiplicand %></td>

              <td class="p-2 text-right">
                <%= link_to I18n.t("views.actions.show"), work_type_path(work_type), class: "inline-block p-1 text-xs font-medium tracking-wider uppercase hover:bg-slate-100 hover:rounded" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="py-32 px-4 text-lg font-medium text-center text-slate-100 bg-slate-900">
      <%= I18n.t("views.messages.no_records") %>
    </div>
  <% end %>

  <div class="overflow-x-auto flex gap-2">
    <%= link_to I18n.t("views.actions.new"), new_work_type_path, class: "py-2 px-4 text-sm font-medium tracking-wider text-slate-100 uppercase bg-slate-900 rounded shadow hover:bg-slate-800 focus:bg-slate-700 focus:outline-none" %>
  </div>
</main>
