<% content_for :title, I18n.t("views.titles.index", model: WorkType.model_name.human(count: 20)) %>

<main class="space-y-8">
  <header>
    <h1 class="text-2xl font-bold">
      <%= yield :title %>
    </h1>
  </header>

  <% if @work_types.load.any? %>
    <div class="overflow-x-auto">
      <table class="w-full text-sm text-left text-gray-700 whitespace-nowrap bg-orange-50 divide-y divide-black divide-opacity-10">
        <thead>
          <tr>
            <th scope="col" class="p-4 font-medium"><%= WorkType.human_attribute_name(:name) %></th>
            <th scope="col" class="p-4 font-medium"><%= WorkType.human_attribute_name(:multiplicand) %></th>
            <th scope="col" class="p-4 font-medium"></th>
          </tr>
        </thead>

        <tbody class="divide-y divide-black divide-opacity-10">
          <% @work_types.each do |work_type| %>
            <tr>
              <td class="p-4"><%= work_type.name %></td>
              <td class="p-4"><%= work_type.multiplicand %></td>

              <td class="p-2 text-right">
                <%= link_to I18n.t("views.actions.show"), work_type_path(work_type), class: "inline-block p-1 text-xs font-medium tracking-wider uppercase bg-transparent hover:bg-black hover:bg-opacity-10" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="py-32 px-4 text-lg font-medium text-center text-orange-100 bg-gray-700">
      <%= I18n.t("views.messages.no_records") %>
    </div>
  <% end %>

  <div class="overflow-x-auto flex gap-2">
    <%= link_to I18n.t("views.actions.new"), new_work_type_path, class: "py-2 px-4 text-sm font-medium tracking-wider text-orange-100 uppercase bg-gray-700 hover:bg-gray-600 focus:bg-gray-500 focus:outline-none" %>
  </div>
</main>
