<% provide :title, "Work Types" %>
<% provide :heading, "Work Types" %>

<% provide :actions do %>
  <%= render "application/layout/actions", new: new_work_type_path %>
<% end %>

<% unless @work_types.length.zero? %>
  <%= page.table do |table| %>
    <%= table.head do |head| %>
      <%= head.cell "Name" %>
      <%= head.cell "Multiplicand" %>
      <%= head.cell %>
    <% end %>

    <%= table.body(@work_types) do |work_type| %>
      <%= table.cell work_type.name %>
      <%= table.cell work_type.multiplicand %>

      <%= table.actions do |actions| %>
        <%= actions.show work_type %>
        <%= actions.edit edit_work_type_path(work_type) %>
        <%= actions.destroy work_type %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= page.empty_collection %>
<% end %>
