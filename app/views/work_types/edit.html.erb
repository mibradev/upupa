<% content_for :title, I18n.t("views.titles.edit", model: WorkType.model_name.human) %>

<main class="space-y-8">
  <header>
    <h1 class="text-2xl font-bold">
      <%= yield :title %>
    </h1>
  </header>

  <% content_for(:actions) do %>
    <%= link_to I18n.t("views.actions.show"), work_type_path(@work_type), class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent hover:bg-black hover:bg-opacity-10" %>
    <%= link_to I18n.t("views.actions.back"), work_types_path, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent hover:bg-black hover:bg-opacity-10" %>
  <% end %>

  <%= render "form", work_type: @work_type %>
</main>
