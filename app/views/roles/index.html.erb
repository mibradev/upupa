<% content_for :title, "Roles" %>

<h1 class="text-2xl font-bold">Roles</h1>

<% content_for(:actions) do %>
  <%= link_to I18n.t("actions.new"), new_role_path, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
<% end %>

<% if @roles.load.any? %>
  <div class="overflow-x-auto rounded shadow">
    <table class="w-full text-sm text-left text-gray-700 whitespace-nowrap bg-orange-50 divide-y divide-black divide-opacity-10">
      <thead>
        <tr>
          <th scope="col" class="p-4 font-medium"><%= Role.human_attribute_name(:name) %></th>
          <th scope="col" class="p-4 font-medium"></th>
        </tr>
      </thead>

      <tbody class="divide-y divide-black divide-opacity-10">
        <% @roles.each do |role| %>
          <tr>
            <td class="p-4"><%= role.name %></td>

            <td class="p-2 text-right">
              <%= link_to I18n.t("actions.show"), role, class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent rounded appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>

              <% unless role.system_role? %>
                <%= link_to I18n.t("actions.edit"), edit_role_path(role), class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent rounded appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
                <%= button_to I18n.t("actions.destroy"), role, method: :delete, form_class: "inline-block", class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent rounded appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="py-32 px-4 text-lg font-medium text-center text-orange-100 bg-gray-700">
    No records found.
  </div>
<% end %>
