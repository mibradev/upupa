<% content_for :title, I18n.t("views.titles.index", model: Role.model_name.human(count: 20)) %>

<% if @roles.load.any? %>
  <div class="overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-700 whitespace-nowrap bg-orange-50 divide-y divide-black divide-opacity-10">
      <thead>
        <tr>
          <th scope="col" class="p-4 font-medium"><%= Role.human_attribute_name(:name) %></th>
          <th scope="col" class="p-4 font-medium"></th>
        </tr>
      </thead>

      <tbody class="divide-y divide-black divide-opacity-10">
        <% @roles.each do |role| %>
          <tr>
            <td class="p-4"><%= role.name %></td>

            <td class="p-2 text-right">
              <%= link_to I18n.t("views.actions.show"), role_path(role), class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="py-32 px-4 text-lg font-medium text-center text-orange-100 bg-gray-700">
    <%= I18n.t("views.messages.no_records") %>
  </div>
<% end %>
