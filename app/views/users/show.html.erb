<% content_for :title, "User" %>

<h1 class="text-2xl font-bold">User</h1>

<% content_for(:actions) do %>
  <%= link_to I18n.t("page.actions.edit"), edit_user_path(@user), class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
  <%= button_to I18n.t("page.actions.destroy"), @user, method: :delete, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
  <%= link_to I18n.t("page.actions.back"), users_path, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
<% end %>

<dl class="text-gray-700 bg-orange-50 rounded divide-y divide-black divide-opacity-10 shadow">
  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= User.human_attribute_name(:email) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @user.email %></dd>
  </div>
</dl>

<section class="space-y-8">
  <header class="flex justify-between items-start space-x-4">
    <h2 class="text-xl font-bold">Roles</h2>
  </header>

  <%= form_with(scope: :user_role, url: user_roles_path(@user)) do |form| %>
    <div class="flex gap-2">
      <div class="w-full">
        <%= form.label :role_id, class: "sr-only" %>
        <%= form.collection_select :role_id, Role.where.not(id: @user.roles), :id, :name, {include_blank: true}, class: "block px-3 py-2 w-full text-gray-700 bg-white rounded border border-black border-opacity-25 appearance-none hover:border-opacity-90 focus:border-gray-700 focus:ring-1 focus:ring-gray-700 focus:outline-none" %>
      </div>

      <%= form.submit class: "block py-2 px-4 text-sm font-medium tracking-widest text-orange-100 uppercase bg-gray-700 rounded shadow appearance-none cursor-pointer hover:bg-gray-600 focus:bg-gray-500 focus:outline-none" %>
    </div>
  <% end %>

  <% if @user.roles.load.any? %>
    <div class="overflow-x-auto rounded shadow">
      <table class="w-full text-sm text-left text-gray-700 whitespace-nowrap bg-orange-50 divide-y divide-black divide-opacity-10">
        <thead>
          <tr>
            <th scope="col" class="p-4 font-medium"><%= Role.human_attribute_name(:name) %></th>
            <th scope="col" class="p-4 font-medium"></th>
          </tr>
        </thead>

        <tbody class="divide-y divide-black divide-opacity-10">
          <% @user.roles.each do |role| %>
            <tr>
              <td class="p-4"><%= role.name %></td>

              <td class="p-2 text-right">
                <%= button_to I18n.t("page.actions.destroy"), user_role_path(@user, role), method: :delete, form_class: "inline-block", class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent rounded appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</section>
