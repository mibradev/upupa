<% content_for :title, I18n.t("views.titles.show", model: User.model_name.human) %>

<main class="space-y-8">
  <header>
    <h1 class="text-2xl font-bold">
      <%= yield :title %>
    </h1>
  </header>

  <dl class="text-indigo-900 bg-indigo-100 divide-y divide-black divide-opacity-10">
    <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
      <dt class="text-sm font-medium"><%= User.human_attribute_name(:email) %></dt>
      <dd class="mt-1 text-sm text-indigo-900 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @user.email %></dd>
    </div>
  </dl>

  <div class="overflow-x-auto flex gap-2">
    <%= link_to I18n.t("views.actions.edit"), edit_user_path(@user), class: "py-2 px-4 text-sm font-medium tracking-wider text-indigo-100 uppercase bg-indigo-900 hover:bg-indigo-800 focus:bg-indigo-700 focus:outline-none" %>
    <%= button_to I18n.t("views.actions.destroy"), user_path(@user), method: :delete, form: {data: {turbo_confirm: I18n.t("views.messages.turbo_confirm")}}, class: "py-2 px-4 text-sm font-medium tracking-wider text-indigo-100 uppercase bg-indigo-900 hover:bg-indigo-800 focus:bg-indigo-700 focus:outline-none" %>
  </div>
</main>

<section id="roles" class="space-y-8">
  <header>
    <h2 class="text-xl font-bold">
      <%= I18n.t("views.titles.index", model: Role.model_name.human(count: 20)) %>
    </h2>
  </header>

  <%= form_with(scope: :role_assignment, url: user_roles_path(@user)) do |form| %>
    <div class="flex gap-2">
      <div class="w-full">
        <%= form.label :role_id, class: "sr-only" %>
        <%= form.collection_select :role_id, Role.where.not(id: @user.roles), :id, :name, {include_blank: true}, class: "block w-full focus:border-indigo-900 focus:ring-indigo-900" %>
      </div>

      <%= form.button class: "py-2 px-4 text-sm font-medium tracking-wider text-indigo-100 uppercase bg-indigo-900 hover:bg-indigo-800 focus:bg-indigo-700 focus:outline-none" %>
    </div>
  <% end %>

  <% if @user.roles.load.any? %>
    <div class="overflow-x-auto">
      <table class="w-full text-sm text-left text-indigo-900 whitespace-nowrap bg-indigo-100 divide-y divide-black divide-opacity-10">
        <thead>
          <tr>
            <th scope="col" class="p-4 font-medium"><%= Role.human_attribute_name(:name) %></th>
            <th scope="col" class="p-4 font-medium"></th>
          </tr>
        </thead>

        <tbody class="divide-y divide-black divide-opacity-10">
          <% @user.roles.each do |role| %>
            <tr>
              <td class="p-4"><%= role.name %></td>

              <td class="p-2 text-right">
                <%= button_to I18n.t("views.actions.destroy"), user_role_path(@user, role), method: :delete, form: {data: {turbo_confirm: I18n.t("views.messages.turbo_confirm")}}, form_class: "inline-block", class: "inline-block p-1 text-xs font-medium tracking-wider uppercase bg-transparent hover:bg-black hover:bg-opacity-10" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</section>
