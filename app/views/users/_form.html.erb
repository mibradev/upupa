<%= form_with(model: user) do |form| %>
  <div class="space-y-4">
    <% if user.errors.any? %>
      <div class="p-4 bg-red-100">
        <h4 class="mb-2 font-medium text-red-900"><%= I18n.t("views.form.errors.heading") %></h4>

        <ul class="pl-4 list-disc list-inside text-sm font-medium text-red-900">
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-2">
      <%= form.label :email, class: "block font-medium" %>
      <%= form.email_field :email, class: "block w-full border-slate-300 rounded focus:border-amber-500 focus:ring-amber-500" %>
    </div>

    <%= form.button class: "py-2 px-4 text-sm font-medium tracking-wider text-slate-100 uppercase bg-slate-900 rounded shadow hover:bg-slate-800 focus:bg-slate-700 focus:outline-none" %>
  </div>
<% end %>
