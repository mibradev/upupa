<% content_for :title, I18n.t("views.titles.edit", model: User.model_name.human) %>

<main class="space-y-8">
  <h1 class="text-2xl font-bold">
    <%= yield :title %>
  </h1>

  <% content_for(:actions) do %>
    <%= link_to I18n.t("views.actions.show"), user_path(@user), class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent hover:bg-black hover:bg-opacity-10" %>
    <%= link_to I18n.t("views.actions.back"), users_path, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent hover:bg-black hover:bg-opacity-10" %>
  <% end %>

  <%= render "form", user: @user %>
</main>
