<aside class="hidden overflow-y-auto overscroll-contain fixed inset-y-0 z-40 w-4/5 text-gray-700 bg-orange-50 sm:w-2/5 md:w-1/3 lg:block lg:static lg:z-auto lg:w-full">
  <nav class="text-sm font-medium">
    <div class="py-3">
      <%= link_to I18n.t("views.nav.home"), root_path, class: "block py-3 px-8 hover:bg-black hover:bg-opacity-10" %>

      <% if Current.user.translator? %>
        <%= link_to WordCount.model_name.human(count: 20), word_counts_path, class: "block py-3 px-8 hover:bg-black hover:bg-opacity-10" %>
      <% end %>

      <% if Current.user.project_manager? %>
        <%= link_to WorkFile.model_name.human(count: 20), work_files_path, class: "block py-3 px-8 hover:bg-black hover:bg-opacity-10" %>
      <% end %>

      <% if Current.user.manager? %>
        <%= link_to WorkType.model_name.human(count: 20), work_types_path, class: "block py-3 px-8 hover:bg-black hover:bg-opacity-10" %>
      <% end %>
    </div>

    <% if Current.user.admin? %>
      <hr class="border-black border-opacity-10">

      <div class="py-3">
        <%= link_to Role.model_name.human(count: 20), roles_path, class: "block py-3 px-8 hover:bg-black hover:bg-opacity-10" %>
        <%= link_to User.model_name.human(count: 20), users_path, class: "block py-3 px-8 hover:bg-black hover:bg-opacity-10" %>
      </div>
    <% end %>
  </nav>
</aside>
