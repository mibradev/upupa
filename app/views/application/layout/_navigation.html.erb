<h1 class="p-8 text-3xl font-extrabold tracking-widest text-center text-gray-600 bg-orange-300 uppercase">
  <%= link_to I18n.t(:app_name), root_path %>
</h1>

<% if page.actions.any? %>
  <div class="py-4">
    <%= link_to "Show", page.actions[:show], class: "block py-2 px-8 w-full text-sm font-medium text-left text-orange-300 bg-transparent appearance-none cursor-pointer hover:bg-gray-600" if page.actions[:show] %>
    <%= link_to "New", page.actions[:new], class: "block py-2 px-8 w-full text-sm font-medium text-left text-orange-300 bg-transparent appearance-none cursor-pointer hover:bg-gray-600" if page.actions[:new] %>
    <%= link_to "Edit", page.actions[:edit], class: "block py-2 px-8 w-full text-sm font-medium text-left text-orange-300 bg-transparent appearance-none cursor-pointer hover:bg-gray-600" if page.actions[:edit] %>
    <%= button_to "Destroy", page.actions[:destroy], class: "block py-2 px-8 w-full text-sm font-medium text-left text-orange-300 bg-transparent appearance-none cursor-pointer hover:bg-gray-600", method: :delete if page.actions[:destroy] %>
    <%= link_to "Back", page.actions[:index], class: "block py-2 px-8 w-full text-sm font-medium text-left text-orange-300 bg-transparent appearance-none cursor-pointer hover:bg-gray-600" if page.actions[:index] %>
  </div>

  <hr class="mx-8 border-gray-500">
<% end %>

<nav class="py-4 text-sm font-medium">
  <%= link_to "Word Counts", word_counts_path, class: "block py-4 px-8 hover:bg-gray-600" %>
  <%= link_to "Work Files", work_files_path, class: "block py-4 px-8 hover:bg-gray-600" %>
  <%= link_to "Work Types", work_types_path, class: "block py-4 px-8 hover:bg-gray-600" %>
</nav>

<hr class="mx-8 border-gray-500">

<%= button_to "Log out", destroy_user_session_path, method: :delete, class: "font-medium bg-transparent appearance-none cursor-pointer hover:text-orange-300", form_class: "p-8 text-sm" %>
