<% page.heading "Work Files" %>

<% page.actions do |actions| %>
  <%= actions.new new_work_file_path %>
<% end %>

<% if @work_files.load.any? %>
  <%= page.table do |table| %>
    <%= table.head do |head| %>
      <%= head.row do |row| %>
        <%= row.cell "Name" %>
        <%= row.cell %>
      <% end %>
    <% end %>

    <%= table.body(@work_files) do |body, work_file| %>
      <%= body.row do |row| %>
        <%= row.cell work_file.name %>

        <%= row.actions do |actions| %>
          <%= actions.show work_file %>
          <%= actions.edit edit_work_file_path(work_file) %>
          <%= actions.destroy work_file %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= page.empty_collection %>
<% end %>
