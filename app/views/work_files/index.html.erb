<%= render "shared/scaffold/header" %>

<% if @resources.any? %>
  <%= render "shared/scaffold/table", th_contents: ["Name"] do |resource| %>
    <%= render "shared/scaffold/table/row", resource: resource, td_contents: [resource.name] %>
  <% end %>
<% else %>
  <%= render "shared/scaffold/empty_collection" %>
<% end %>
