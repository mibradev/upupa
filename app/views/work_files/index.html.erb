<% provide :title, "Work Files" %>
<% provide :heading, "Work Files" %>

<% provide :actions do %>
  <%= render "application/layout/actions", new: new_work_file_path %>
<% end %>

<% unless @work_files.empty? %>
  <%= page.table do |table| %>
    <%= table.head do |head| %>
      <%= head.cell "Name" %>
      <%= head.cell %>
    <% end %>

    <%= table.body(@work_files) do |work_file| %>
      <%= table.cell work_file.name %>

      <%= table.actions do |actions| %>
        <%= actions.show work_file %>
        <%= actions.edit edit_work_file_path(work_file) %>
        <%= actions.destroy work_file %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= page.empty_collection %>
<% end %>
