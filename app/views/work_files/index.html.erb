<%= render "shared/scaffold/header" do %>
  <%= render "shared/scaffold/header/heading2", content: "Work Files" %>

  <%= render "shared/scaffold/header/actions" do %>
    <%= render "shared/scaffold/header/action", body: "New", url: new_work_file_path %>
  <% end %>
<% end %>

<% if @work_files %>
  <%= render "shared/scaffold/table" do %>
    <%= render "shared/scaffold/table/head" do %>
      <%= render "shared/scaffold/table/head_row" do %>
        <% ["Name", ""].each do |title| %>
          <%= render "shared/scaffold/table/head_cell", content: title %>
        <% end %>
      <% end %>
    <% end %>

    <%= render "shared/scaffold/table/body" do %>
      <% @work_files.each do |work_file| %>
        <%= render "shared/scaffold/table/body_row" do %>
          <%= render "shared/scaffold/table/body_cell", content: work_file.name %>

          <%= render "shared/scaffold/table/actions" do %>
            <%= render "shared/scaffold/table/action", body: "Show", url: work_file %>
            <%= render "shared/scaffold/table/action", body: "Edit", url: edit_work_file_path(work_file) %>
            <%= render "shared/scaffold/table/action", body: "Destroy", url: work_file, method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render "shared/scaffold/empty_collection" %>
<% end %>
