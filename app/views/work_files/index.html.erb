<%= page.header do |header| %>
  <%= header.heading "Work Files" %>

  <%= header.actions do |action| %>
    <%= action.new new_work_file_path %>
  <% end %>
<% end %>

<% unless @work_files.empty? %>
  <%= render "application/table" do %>
    <%= render "application/table/head" do %>
      <%= render "application/table/head_cell", content: "Name" %>
      <%= render "application/table/head_cell", content: "" %>
    <% end %>

    <%= render "application/table/body", collection: @work_files do |work_file| %>
      <%= render "application/table/body_cell", content: work_file.name %>

      <%= render "application/table/actions" do %>
        <%= render "application/table/actions/show", url: work_file %>
        <%= render "application/table/actions/edit", url: edit_work_file_path(work_file) %>
        <%= render "application/table/actions/destroy", url: work_file %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render "application/empty_collection" %>
<% end %>
