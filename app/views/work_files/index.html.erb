<%= render "shared/scaffold/header", resources: @work_files %>

<% if @work_files.any? %>
  <%= render "shared/scaffold/table", th_contents: ["Name"] do %>
    <% @work_files.each do |work_file| %>
      <%= render "shared/scaffold/table/row", resource: work_file, td_contents: [work_file.name] %>
    <% end %>
  <% end %>
<% else %>
  <%= render "shared/scaffold/empty_collection" %>
<% end %>
