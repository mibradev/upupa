<%= render "shared/header" do %>
  <%= render "shared/header/heading2", content: "Work Files" %>

  <%= render "shared/header/actions" do %>
    <%= render "shared/header/action", body: "New", url: new_work_file_path %>
  <% end %>
<% end %>

<% unless @work_files.empty? %>
  <%= render "shared/table" do %>
    <%= render "shared/table/head" do %>
      <%= render "shared/table/head_row" do %>
        <%= render "shared/table/head_cell", content: "Name" %>
        <%= render "shared/table/head_cell", content: "" %>
      <% end %>
    <% end %>

    <%= render "shared/table/body" do %>
      <% @work_files.each do |work_file| %>
        <%= render "shared/table/body_row" do %>
          <%= render "shared/table/body_cell", content: work_file.name %>

          <%= render "shared/table/actions" do %>
            <%= render "shared/table/actions/show", url: work_file %>
            <%= render "shared/table/actions/edit", url: edit_work_file_path(work_file) %>
            <%= render "shared/table/actions/destroy", url: work_file %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render "shared/empty_collection" %>
<% end %>
