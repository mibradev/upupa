<%= render "shared/scaffold/header" do %>
  <%= render "shared/scaffold/header/heading", content: "Show Work File" %>

  <%= render "shared/scaffold/header/actions" do %>
    <%= render "shared/scaffold/header/action", body: "Edit", url: edit_work_file_path(@work_file) %>
    <%= render "shared/scaffold/header/action", body: "Back", url: work_files_path %>
  <% end %>
<% end %>

<%= render "shared/scaffold/description_list" do %>
  <%= render "shared/scaffold/description_list/row" do %>
    <%= render "shared/scaffold/description_list/term", term: "Name" %>
    <%= render "shared/scaffold/description_list/description", description: @work_file.name %>
  <% end %>
<% end %>
