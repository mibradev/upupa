<%= page.header do |header| %>
  <%= header.heading "Work File" %>

  <%= header.actions do |actions| %>
    <%= actions.edit edit_work_file_path(@work_file) %>
    <%= actions.index work_files_path %>
  <% end %>
<% end %>

<%= render "application/description_list" do %>
  <%= render "application/description_list/group", term: "Name", description: @work_file.name %>
<% end %>
