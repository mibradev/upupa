<% content_for :title, I18n.t("views.titles.show", model: WorkFile.model_name.human) %>

<main class="space-y-8">
  <header>
    <h1 class="text-2xl font-bold">
      <%= yield :title %>
    </h1>
  </header>

  <dl class="text-slate-900 bg-slate-100 divide-y divide-black divide-opacity-10">
    <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
      <dt class="text-sm font-medium"><%= WorkFile.human_attribute_name(:name) %></dt>
      <dd class="mt-1 text-sm text-slate-900 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @work_file.name %></dd>
    </div>
  </dl>

  <div class="overflow-x-auto flex gap-2">
    <%= link_to I18n.t("views.actions.edit"), edit_work_file_path(@work_file), class: "py-2 px-4 text-sm font-medium tracking-wider text-slate-100 uppercase bg-slate-900 hover:bg-slate-800 focus:bg-slate-700 focus:outline-none" %>
    <%= button_to I18n.t("views.actions.destroy"), work_file_path(@work_file), method: :delete, form: {data: {turbo_confirm: I18n.t("views.messages.turbo_confirm")}}, class: "py-2 px-4 text-sm font-medium tracking-wider text-slate-100 uppercase bg-slate-900 hover:bg-slate-800 focus:bg-slate-700 focus:outline-none" %>
  </div>
</main>
