<% content_for :title, I18n.t("views.titles.edit", model: WordCount.model_name.human) %>

<main class="space-y-8">
  <header>
    <h1 class="text-2xl font-bold">
      <%= yield :title %>
    </h1>
  </header>

  <%= render "form", word_count: @word_count %>

  <div class="overflow-x-auto flex gap-2">
    <%= link_to I18n.t("views.actions.show"), word_count_path(@word_count), class: "block py-2 px-4 text-sm font-medium tracking-widest text-orange-100 uppercase bg-gray-700 hover:bg-gray-600 focus:bg-gray-500 focus:outline-none" %>
    <%= link_to I18n.t("views.actions.back"), word_counts_path, class: "block py-2 px-4 text-sm font-medium tracking-widest text-orange-100 uppercase bg-gray-700 hover:bg-gray-600 focus:bg-gray-500 focus:outline-none" %>
  </div>
</main>
