<% content_for :title, I18n.t("page.headings.show", model: WordCount.model_name.human) %>

<h1 class="text-2xl font-bold">
  <%= I18n.t("page.headings.show", model: WordCount.model_name.human) %>
</h1>

<% content_for(:actions) do %>
  <%= link_to I18n.t("page.actions.edit"), edit_word_count_path(@word_count), class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
  <%= button_to I18n.t("page.actions.destroy"), word_count_path(@word_count), method: :delete, form: {data: {turbo_confirm: I18n.t("page.messages.turbo_confirm")}}, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
  <%= link_to I18n.t("page.actions.back"), word_counts_path, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
<% end %>

<dl class="text-gray-700 bg-orange-50 rounded divide-y divide-black divide-opacity-10 shadow">
  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCount.human_attribute_name(:day) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @word_count.day %></dd>
  </div>

  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCount.human_attribute_name(:date) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @word_count.date %></dd>
  </div>

  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCount.human_attribute_name(:total) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= number_with_precision(@word_count.word_count_files.sum(:total), precision: 2) %></dd>
  </div>

  <div class="p-4 sm:grid sm:grid-cols-4 sm:gap-4">
    <dt class="text-sm font-medium"><%= WordCount.human_attribute_name(:notes) %></dt>
    <dd class="mt-1 text-sm text-gray-700 text-opacity-90 sm:col-span-2 sm:mt-0"><%= @word_count.notes %></dd>
  </div>
</dl>

<section class="space-y-8">
  <header class="flex justify-between items-start space-x-4">
    <h2 class="text-xl font-bold">
      <%= I18n.t("page.headings.index", model: WordCountFile.model_name.human(count: 20)) %>
    </h2>

    <div class="flex bg-gray-700 rounded">
      <%= link_to I18n.t("page.actions.new"), new_word_count_word_count_file_path(@word_count), class: "block py-2 px-4 text-sm font-medium tracking-widest text-orange-100 uppercase bg-gray-700 rounded shadow appearance-none cursor-pointer hover:bg-gray-600 focus:bg-gray-500 focus:outline-none" %>
    </div>
  </header>

  <% if @word_count.word_count_files.load.any? %>
    <%= render "word_count_files/table", word_count_files: @word_count.word_count_files %>
  <% end %>
</section>
