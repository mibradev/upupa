<% page.heading = "Word Count" %>
<% page.actions = {edit: edit_word_count_path(@word_count), destroy: @word_count, index: word_counts_path} %>

<%= page.description_list do |description_list| %>
  <%= description_list.group "Day", @word_count.date.strftime("%A") %>
  <%= description_list.group "Date", @word_count.date %>
  <%= description_list.group "Total", number_with_precision(@word_count.word_count_files.sum(:total), precision: 2) %>
  <%= description_list.group "Notes", @word_count.notes %>
<% end %>

<%= page.section do |section| %>
  <%= section.header do |header| %>
    <%= header.heading "Word count files" %>

    <%= header.actions do |actions| %>
      <%= actions.new new_word_count_word_count_file_path(@word_count) %>
    <% end %>
  <% end %>

  <% unless @word_count.word_count_files.length.zero? %>
    <%= render "word_count_files/table", word_count_files: @word_count.word_count_files %>
  <% end %>
<% end %>
