<%= render "shared/scaffold/header" do %>
  <%= render "shared/scaffold/header/heading", content: "Show Word Count" %>

  <%= render "shared/scaffold/header/actions" do %>
    <%= render "shared/scaffold/header/action", body: "Edit", url: edit_word_count_path(@word_count) %>
    <%= render "shared/scaffold/header/action", body: "Back", url: word_counts_path %>
  <% end %>
<% end %>

<%= render "shared/scaffold/description_list" do %>
  <%= render "shared/scaffold/description_list/row" do %>
    <%= render "shared/scaffold/description_list/term", content: "Date" %>
    <%= render "shared/scaffold/description_list/description", content: @word_count.date %>
  <% end %>

  <%= render "shared/scaffold/description_list/row" do %>
    <%= render "shared/scaffold/description_list/term", content: "Notes" %>
    <%= render "shared/scaffold/description_list/description", content: @word_count.notes %>
  <% end %>
<% end %>
