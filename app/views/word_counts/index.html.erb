<% content_for :title, I18n.t("page.headings.index", model: WordCount.model_name.human(count: 20)) %>

<% content_for(:actions) do %>
  <%= link_to I18n.t("page.actions.new"), new_word_count_path, class: "block py-2 px-8 w-full text-sm font-medium text-left text-gray-700 bg-transparent appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
<% end %>

<% if @word_counts.load.any? %>
  <div class="overflow-x-auto rounded">
    <table class="w-full text-sm text-left text-gray-700 whitespace-nowrap bg-orange-50 divide-y divide-black divide-opacity-10">
      <thead>
        <tr>
          <th scope="col" class="p-4 font-medium"><%= WordCount.human_attribute_name(:day) %></th>
          <th scope="col" class="p-4 font-medium"><%= WordCount.human_attribute_name(:date) %></th>
          <th scope="col" class="p-4 font-medium"><%= WordCount.human_attribute_name(:notes) %></th>
          <th scope="col" class="p-4 font-medium"></th>
        </tr>
      </thead>

      <tbody class="divide-y divide-black divide-opacity-10">
        <% @word_counts.each do |word_count| %>
          <tr>
            <td class="p-4"><%= I18n.localize(word_count.date, format: "%A") %></td>
            <td class="p-4"><%= word_count.date %></td>
            <td class="p-4"><%= truncate(word_count.notes) %></td>

            <td class="p-2 text-right">
              <%= link_to I18n.t("page.actions.show"), word_count_path(word_count), class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent rounded appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
              <%= link_to I18n.t("page.actions.edit"), edit_word_count_path(word_count), class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent rounded appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
              <%= button_to I18n.t("page.actions.destroy"), word_count_path(word_count), method: :delete, form: {data: {turbo_confirm: I18n.t("page.messages.turbo_confirm")}}, form_class: "inline-block", class: "inline-block p-1 text-xs font-medium tracking-widest uppercase bg-transparent rounded appearance-none cursor-pointer hover:bg-black hover:bg-opacity-10" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="py-32 px-4 text-lg font-medium text-center text-orange-100 bg-gray-700">
    <%= I18n.t("page.messages.no_records") %>
  </div>
<% end %>
