<%= render "shared/scaffold/header", resources: @word_counts %>

<% if @word_counts.any? %>
  <%= render "shared/scaffold/table", th_contents: ["Date", "Notes"] do %>
    <% @word_counts.each do |word_count| %>
      <%= render "shared/scaffold/table/row", resource: word_count, td_contents: [word_count.date, word_count.notes] %>
    <% end %>
  <% end %>
<% else %>
  <%= render "shared/scaffold/empty_collection" %>
<% end %>
