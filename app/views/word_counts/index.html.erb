<%= render "shared/scaffold/header" do %>
  <%= render "shared/scaffold/header/heading2", content: "Word Counts" %>

  <%= render "shared/scaffold/header/actions" do %>
    <%= render "shared/scaffold/header/action", body: "New", url: new_word_count_path %>
  <% end %>
<% end %>

<% if @word_counts %>
  <%= render "shared/scaffold/table" do %>
    <%= render "shared/scaffold/table/head" do %>
      <%= render "shared/scaffold/table/head_row" do %>
        <% ["Date", "Notes", ""].each do |title| %>
          <%= render "shared/scaffold/table/head_cell", content: title %>
        <% end %>
      <% end %>
    <% end %>

    <%= render "shared/scaffold/table/body" do %>
      <% @word_counts.each do |word_count| %>
        <%= render "shared/scaffold/table/body_row" do %>
          <%= render "shared/scaffold/table/body_cell", content: word_count.date %>
          <%= render "shared/scaffold/table/body_cell", content: word_count.notes %>
          <%= render "shared/scaffold/table/cells/actions", resource: word_count %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render "shared/scaffold/empty_collection" %>
<% end %>
