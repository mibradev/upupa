<% page.heading "Word Counts" %>

<% page.actions do |actions| %>
  <%= actions.new new_word_count_path %>
<% end %>

<% unless @word_counts.length.zero? %>
  <%= page.table do |table| %>
    <%= table.head do |head| %>
      <%= head.cell "Day" %>
      <%= head.cell "Date" %>
      <%= head.cell "Notes" %>
      <%= head.cell %>
    <% end %>

    <%= table.body(@word_counts) do |word_count| %>
      <%= table.cell word_count.date.strftime("%A") %>
      <%= table.cell word_count.date %>
      <%= table.cell truncate(word_count.notes) %>

      <%= table.actions do |actions| %>
        <%= actions.show word_count %>
        <%= actions.edit edit_word_count_path(word_count) %>
        <%= actions.destroy word_count %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= page.empty_collection %>
<% end %>
