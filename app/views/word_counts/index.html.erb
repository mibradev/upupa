<%= render "shared/header" do %>
  <%= render "shared/header/heading2", content: "Word Counts" %>

  <%= render "shared/header/actions" do %>
    <%= render "shared/header/actions/new", url: new_word_count_path %>
  <% end %>
<% end %>

<% unless @word_counts.empty? %>
  <%= render "shared/table" do %>
    <%= render "shared/table/head" do %>
      <%= render "shared/table/head_row" do %>
        <%= render "shared/table/head_cell", content: "Day" %>
        <%= render "shared/table/head_cell", content: "Date" %>
        <%= render "shared/table/head_cell", content: "Notes" %>
        <%= render "shared/table/head_cell", content: "" %>
      <% end %>
    <% end %>

    <%= render "shared/table/body" do %>
      <% @word_counts.each do |word_count| %>
        <%= render "shared/table/body_row" do %>
          <%= render "shared/table/body_cell", content: word_count.date.strftime("%A") %>
          <%= render "shared/table/body_cell", content: word_count.date %>
          <%= render "shared/table/body_cell", content: truncate(word_count.notes) %>

          <%= render "shared/table/actions" do %>
            <%= render "shared/table/actions/show", url: word_count %>
            <%= render "shared/table/actions/edit", url: edit_word_count_path(word_count) %>
            <%= render "shared/table/actions/destroy", url: word_count %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render "shared/empty_collection" %>
<% end %>
