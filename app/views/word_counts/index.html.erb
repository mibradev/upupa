<%= page.heading "Word Counts" %>

<% page.actions do |actions| %>
  <%= actions.new new_word_count_path %>
<% end %>

<% if @word_counts.load.any? %>
  <%= page.table do |table| %>
    <%= table.head do |head| %>
      <%= head.row do |row| %>
        <%= row.cell "Day" %>
        <%= row.cell "Date" %>
        <%= row.cell "Notes" %>
        <%= row.cell %>
      <% end %>
    <% end %>

    <%= table.body(@word_counts) do |body, word_count| %>
      <%= body.row do |row| %>
        <%= row.cell word_count.date.strftime("%A") %>
        <%= row.cell word_count.date %>
        <%= row.cell truncate(word_count.notes) %>

        <%= row.actions do |actions| %>
          <%= actions.show word_count %>
          <%= actions.edit edit_word_count_path(word_count) %>
          <%= actions.destroy word_count %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= page.empty_collection %>
<% end %>
