<%= page.header do |header| %>
  <%= header.heading "Word Counts" %>

  <%= header.actions do |action| %>
    <%= action.new new_word_count_path %>
  <% end %>
<% end %>

<% unless @word_counts.empty? %>
  <%= render "application/table" do %>
    <%= render "application/table/head" do %>
      <%= render "application/table/head_cell", content: "Day" %>
      <%= render "application/table/head_cell", content: "Date" %>
      <%= render "application/table/head_cell", content: "Notes" %>
      <%= render "application/table/head_cell", content: "" %>
    <% end %>

    <%= render "application/table/body", collection: @word_counts do |word_count| %>
      <%= render "application/table/body_cell", content: word_count.date.strftime("%A") %>
      <%= render "application/table/body_cell", content: word_count.date %>
      <%= render "application/table/body_cell", content: truncate(word_count.notes) %>

      <%= render "application/table/actions" do %>
        <%= render "application/table/actions/show", url: word_count %>
        <%= render "application/table/actions/edit", url: edit_word_count_path(word_count) %>
        <%= render "application/table/actions/destroy", url: word_count %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <%= render "application/empty_collection" %>
<% end %>
