<% content_for :title, I18n.t("views.titles.index", model: WordCount.model_name.human(count: 20)) %>

<main class="space-y-8">
  <header>
    <h1 class="text-2xl font-bold">
      <%= yield :title %>
    </h1>
  </header>

  <% if @word_counts.load.any? %>
    <div class="overflow-x-auto">
      <table class="w-full text-sm text-left text-slate-900 whitespace-nowrap bg-slate-100 divide-y divide-slate-200">
        <thead>
          <tr>
            <th scope="col" class="p-4 font-medium"><%= WordCount.human_attribute_name(:day) %></th>
            <th scope="col" class="p-4 font-medium"><%= WordCount.human_attribute_name(:date) %></th>
            <th scope="col" class="p-4 font-medium"><%= WordCount.human_attribute_name(:notes) %></th>
            <th scope="col" class="p-4 font-medium"></th>
          </tr>
        </thead>

        <tbody class="divide-y divide-slate-200">
          <% @word_counts.each do |word_count| %>
            <tr>
              <td class="p-4"><%= I18n.localize(word_count.date, format: "%A") %></td>
              <td class="p-4"><%= word_count.date %></td>
              <td class="p-4"><%= truncate(word_count.notes) %></td>

              <td class="p-2 text-right">
                <%= link_to I18n.t("views.actions.show"), word_count_path(word_count), class: "inline-block p-1 text-xs font-medium tracking-wider uppercase hover:bg-slate-200" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="py-32 px-4 text-lg font-medium text-center text-slate-100 bg-slate-900">
      <%= I18n.t("views.messages.no_records") %>
    </div>
  <% end %>

  <div class="overflow-x-auto flex gap-2">
    <%= link_to I18n.t("views.actions.new"), new_word_count_path, class: "py-2 px-4 text-sm font-medium tracking-wider text-slate-100 uppercase bg-slate-900 hover:bg-slate-800 focus:bg-slate-700 focus:outline-none" %>
  </div>
</main>
